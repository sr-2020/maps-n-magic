{
  "name": "sr2020-mm-server",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node -r esm -r dotenv/config --inspect ./dist/bin/www",
    "start:server": "node -r esm -r dotenv/config ./dist/bin/www",
    "watch:server": "nodemon --inspect -r esm -r dotenv/config ./dist/bin/www",
    "ts:build": "tsc --build",
    "ts:clean": "tsc --build --clean",
    "ts:watch": "tsc  --build --watch --preserveWatchOutput"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express-serve-static-core": "^4.17.19",
    "@types/express-ws": "^3.0.0",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/morgan": "^1.9.2",
    "@types/ws": "^7.4.4",
    "cookie-parser": "~1.4.5",
    "cors": "^2.8.5",
    "debug": "~4.3.1",
    "dotenv": "^8.2.0",
    "dropbox": "^4.0.30",
    "esm": "^3.2.25",
    "express": "~4.17.1",
    "express-ws": "^4.0.0",
    "http-errors": "~1.8.0",
    "isomorphic-fetch": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.10.0",
    "node-fetch": "^2.6.1",
    "ramda": "^0.27.1",
    "shortid": "^2.2.16",
    "sr2020-mm-event-engine": "*",
    "sr2020-mm-server-event-engine": "*"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.17.29",
    "@types/ramda": "^0.27.40",
    "@types/shortid": "0.0.29",
    "nodemon": "^2.0.6",
    "typescript": "^4.5.4"
  },
  "nodemonConfig": {
    "verbose": true,
    "delay": "1000",
    "watch": [
      "dist",
      ".env",
      "../sr2020-mm-event-engine/dist",
      "../sr2020-mm-server-event-engine/dist"
    ],
    "ignore": [
      "node_modules/*",
      "**/*.map",
      "**/*.ts"
    ]
  }
}
